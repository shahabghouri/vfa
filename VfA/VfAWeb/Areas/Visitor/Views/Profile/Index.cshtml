@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
    var ProductList = Model.Products.ToList();
    var ServiceList = Model.Services.ToList();
    var RequestList = Model.Requests.ToList();
}
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Open+Sans">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
<style>
    body {
        background: #e2eaef;
        font-family: "Open Sans", sans-serif;
    }

    .h2ProfileCsarousel {
        color: #000;
        font-size: 26px;
        font-weight: 300;
        text-align: left;
        text-transform: uppercase;
        position: relative;
        margin: 30px 0 15px;
    }

    #AddProductBtn, #AddRequestBtn, #AddServiceBtn {
        margin: 30px 0 15px;
    }

    .h2ProfileCsarousel::after {
        content: "";
        width: 150px;
        position: absolute;
        margin: 0 0;
        height: 4px;
        border-radius: 1px;
        background: #007bff;
        left: 0;
        right: 0;
        bottom: -20px;
    }

    .carousel {
        margin: 50px auto;
        padding: 0 70px;
    }

        .carousel .item {
            color: #747d89;
            min-height: 325px;
            text-align: center;
            overflow: hidden;
        }

        .carousel .thumb-wrapper {
            padding: 25px 15px;
            background: #fff;
            border-radius: 6px;
            text-align: center;
            position: relative;
            box-shadow: 0 2px 3px rgba(0,0,0,0.2);
        }

        .carousel .item .img-box {
            height: 120px;
            margin-bottom: 20px;
            width: 100%;
            position: relative;
        }

        .carousel .item img {
            max-width: 100%;
            max-height: 100%;
            display: inline-block;
            position: absolute;
            bottom: 0;
            margin: 0 auto;
            left: 0;
            right: 0;
        }

        .carousel .item h4 {
            font-size: 18px;
        }

        .carousel .item h4, .carousel .item p, .carousel .item ul {
            margin-bottom: 5px;
        }

        .carousel .thumb-content .btn {
            color: #007bff;
            font-size: 11px;
            text-transform: uppercase;
            font-weight: bold;
            background: none;
            border: 1px solid #007bff;
            padding: 6px 14px;
            margin-top: 5px;
            line-height: 16px;
            border-radius: 20px;
        }

            .carousel .thumb-content .btn:hover, .carousel .thumb-content .btn:focus {
                color: #fff;
                background: #007bff;
                box-shadow: none;
            }

            .carousel .thumb-content .btn i {
                font-size: 14px;
                font-weight: bold;
                margin-left: 5px;
            }

        .carousel .item-price {
            font-size: 13px;
            padding: 2px 0;
        }

            .carousel .item-price strike {
                opacity: 0.7;
                margin-right: 5px;
            }

    .carousel-control-prev, .carousel-control-next {
        height: 44px;
        width: 40px;
        background: #007bff;
        margin: auto 0;
        border-radius: 4px;
        opacity: 0.8;
    }

        .carousel-control-prev:hover, .carousel-control-next:hover {
            background: #007bff;
            opacity: 1;
        }

        .carousel-control-prev i, .carousel-control-next i {
            font-size: 36px;
            position: absolute;
            top: 50%;
            display: inline-block;
            margin: -19px 0 0 0;
            z-index: 5;
            left: 0;
            right: 0;
            color: #fff;
            text-shadow: none;
            font-weight: bold;
        }

        .carousel-control-prev i {
            margin-left: -2px;
        }

        .carousel-control-next i {
            margin-right: -4px;
        }

    .carousel-indicators {
        bottom: -50px;
    }

        .carousel-indicators li, .carousel-indicators li.active {
            width: 10px;
            height: 10px;
            margin: 4px;
            border-radius: 50%;
            border: none;
        }

        .carousel-indicators li {
            background: rgba(0, 0, 0, 0.2);
        }

            .carousel-indicators li.active {
                background: rgba(0, 0, 0, 0.6);
            }

    .carousel .wish-icon {
        position: absolute;
        right: 10px;
        top: 10px;
        z-index: 99;
        cursor: pointer;
        font-size: 16px;
        color: #abb0b8;
    }

        .carousel .wish-icon .fa-heart {
            color: #ff6161;
        }

    .star-rating li {
        padding: 0;
    }

    .star-rating i {
        font-size: 14px;
        color: #ffc000;
    }

    .img-logo {
        border: 2px solid black;
        min-height: 130px;
        min-width: 115px;
    }

    .img-box {
        width: 100%;
        height: 200px; /* Set desired height */
        overflow: hidden;
        position: relative;
    }

        .img-box img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Ensures image covers the area while maintaining aspect ratio */
            object-position: center; /* Center the image within the container */
        }
</style>
<div class="container-xl">
    <div class="row">
        <div class="col-md-2">
            <img class="img-logo" alt="logo-here" />
        </div>
        <div class="col-md-10">
            <div><input class="my-2" placeholder="company Name" value="@Model.CompnayName" /></div>
            @if (Model.UserType.ToLower() == "impoter")
            {
                <div><input class="my-2" placeholder="Country" value="@Model.CountryName" /></div>
            }
            @if (Model.UserType.ToLower() == "expoter")
            {
                <div><input class="my-2" placeholder="Wilaya" value="@Model.WilayaName" /></div>
            }
            <div><input class="my-2" placeholder="Activity" value="@Model.ActivityName" /></div>
        </div>
        @if (Model.UserType.ToLower() == "expoter")
        {
            <div class="row">
                <div class="col-md-12  d-flex justify-content-between">
                    <div>
                        <h2 class="h2ProfileCsarousel">Products</h2>
                    </div>
                    <div>
                        <button id="AddProductBtn" class="btn btn-light border-dark me-1">Add <span class="fa fa-solid fa-plus"></span></button>
                    </div>
                </div>
                <div class="col-md-12">
                    <div id="productCarousel" class="carousel slide" data-ride="carousel" data-interval="0">
                        <!-- Carousel indicators -->
                        <ol class="carousel-indicators">
                            @for (int i = 0; i < ProductList.Count / 4; i++)
                            {
                                <li data-target="#productCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                            }
                        </ol>
                        <!-- Wrapper for carousel items -->
                        <div class="carousel-inner">
                            @for (int i = 0; i < ProductList.Count; i += 4)
                            {
                                <div class="item carousel-item @(i == 0 ? "active" : "")">
                                    <div class="row">
                                        @for (int j = i; j < i + 4 && j < ProductList.Count; j++)
                                        {
                                            var productImgUrl = "";
                                            if (ProductList[j].ProductImages.Count > 0)
                                            {
                                                productImgUrl = ProductList[j].ProductImages[0].ImageUrl;
                                            }
                                            <div class="col-sm-3">
                                                <div class="thumb-wrapper">
                                                    <span class="wish-icon"><i class="fa fa-solid fa-pencil mr-2"></i><i class="fa fa-trash"></i></span>
                                                    <div class="img-box">
                                                        <img src="@productImgUrl" class="img-fluid" alt="@ProductList[j].Name">
                                                    </div>
                                                    <div class="thumb-content">
                                                        <h4>@ProductList[j].Name</h4>
                                                        <a href="#" class="btn btn-primary">Details</a>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <!-- Carousel controls -->
                        <a class="carousel-control-prev" href="#productCarousel" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a class="carousel-control-next" href="#productCarousel" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12  d-flex justify-content-between">
                    <div>
                        <h2 class="h2ProfileCsarousel">Services</h2>
                    </div>
                    <div>
                        <button id="AddServiceBtn" class="btn btn-light border-dark me-1">Add <span class="fa fa-solid fa-plus"></span></button>
                    </div>
                </div>
                <div class="col-md-12">
                    <div id="serviceCarousel" class="carousel slide" data-ride="carousel" data-interval="0">
                        <!-- Carousel indicators -->
                        <ol class="carousel-indicators">
                            @for (int i = 0; i < ServiceList.Count / 4; i++)
                            {
                                <li data-target="#serviceCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                            }
                        </ol>
                        <!-- Wrapper for carousel items -->
                        <div class="carousel-inner">
                            @for (int i = 0; i < ServiceList.Count; i += 4)
                            {
                                <div class="item carousel-item @(i == 0 ? "active" : "")">
                                    <div class="row">
                                        @for (int j = i; j < i + 4 && j < ServiceList.Count; j++)
                                        {
                                            var serviceImgUrl = "";
                                            if (ServiceList[j].ServiceImages.Count > 0)
                                            {
                                                serviceImgUrl = ServiceList[j].ServiceImages[0].ImageUrl;
                                            }
                                            <div class="col-sm-3">
                                                <div class="thumb-wrapper">
                                                    <span class="wish-icon"><i class="fa fa-solid fa-pencil mr-2"></i><i class="fa fa-trash"></i></span>
                                                    <div class="img-box">
                                                        <img src="@serviceImgUrl" class="img-fluid" alt="@ServiceList[j].Name">
                                                    </div>
                                                    <div class="thumb-content">
                                                        <h4>@ServiceList[j].Name</h4>
                                                        <a href="#" class="btn btn-primary">Details</a>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <!-- Carousel controls -->
                        <a class="carousel-control-prev" href="#serviceCarousel" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a class="carousel-control-next" href="#serviceCarousel" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
        @if (Model.UserType.ToLower() == "impoter" || Model.UserType.ToLower() == "expoter")
        {
            <div class="row">
                <div class="col-md-12  d-flex justify-content-between">
                    <div>
                        <h2 class="h2ProfileCsarousel">Requests</h2>
                    </div>
                    <div>
                        <button id="AddRequestBtn" class="btn btn-light border-dark me-1">Add <span class="fa fa-solid fa-plus"></span></button>
                    </div>
                </div>
                <div class="col-md-12">
                    <div id="requestCarousel" class="carousel slide" data-ride="carousel" data-interval="0">
                        <!-- Carousel indicators -->
                        <ol class="carousel-indicators">
                            @for (int i = 0; i < RequestList.Count / 4; i++)
                            {
                                <li data-target="#requestCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                            }
                        </ol>
                        <!-- Wrapper for carousel items -->
                        <div class="carousel-inner">
                            @for (int i = 0; i < RequestList.Count; i += 4)
                            {
                                <div class="item carousel-item @(i == 0 ? "active" : "")">
                                    <div class="row">
                                        @for (int j = i; j < i + 4 && j < RequestList.Count; j++)
                                        {
                                            var requestImgUrl = "";
                                            if (RequestList[j].RequestImages.Count > 0)
                                            {
                                                requestImgUrl = RequestList[j].RequestImages[0].ImageUrl;
                                            }
                                            <div class="col-sm-3">
                                                <div class="thumb-wrapper">
                                                    <span class="wish-icon"><i class="fa fa-solid fa-pencil mr-2"></i><i class="fa fa-trash"></i></span>
                                                    <div class="img-box">
                                                        <img src="@requestImgUrl" class="img-fluid" alt="@RequestList[j].Name">
                                                    </div>
                                                    <div class="thumb-content">
                                                        <h4>@RequestList[j].Name</h4>
                                                        <a href="#" class="btn btn-primary">Details</a>
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <!-- Carousel controls -->
                        <a class="carousel-control-prev" href="#requestCarousel" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a class="carousel-control-next" href="#requestCarousel" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".wish-icon i").click(function () {
                $(this).toggleClass("fa-heart fa-heart-o");
            });
            $('#AddProductBtn').on('click', function () {
                window.location.href = '@Url.Action("Upsert", "Product", new { area = "Admin" })';
            });
            $('#AddServiceBtn').on('click', function () {
                window.location.href = '@Url.Action("Upsert", "Service", new { area = "Admin" })';
            });
            $('#AddRequestBtn').on('click', function () {
                window.location.href = '@Url.Action("Upsert", "Request", new { area = "Admin" })';
            });
        });
    </script>
}
