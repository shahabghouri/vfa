                                </div>
                            </div>
                        }
                    </div>
                    <!-- Left and right controls/icons -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#requestCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#requestCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="row col-6">
            <div class="col-md-12  d-flex justify-content-start">
                <div>
                    <h2 class="h2ProfileCsarousel">Our Partners</h2>
                </div>
            </div>
            <div class="col-md-12">
                <div id="ourPartnersCarousel" class="carousel slide" data-bs-ride="carousel">
