                                        }
                                        <div class="col-sm-3">
                                            <div class="thumb-wrapper">
                                                <div class="img-box">
                                                    <img src="@requestImgUrl" class="img-fluid" alt="@PartnerList[j].Name">
                                                </div>
                                                <div class="thumb-content">
                                                    <h4>@PartnerList[j].Name</h4>
