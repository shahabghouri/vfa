@model RequestVM
@{
    ViewData["Title"] = Model.Request.Id!=0 ? "Update Request" : "Create Request";
}
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.Request.Id!=0?"Update":"Create") Request</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Request.Id" hidden />
           
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@
                        <div class="form-floating mb-2">
                            <input asp-for="Request.Name" class="form-control" />
                            <label asp-for="Request.Name" class="form-label"></label>
                            <span asp-validation-for="Request.Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <select asp-for="@Model.Request.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for="Request.CategoryId" class="form-label"></label>
                            <span asp-validation-for="Request.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="py-2 col-12">
                            <label asp-for="Request.Description" class="ms-2 text-muted"></label>
                            <textarea asp-for="Request.Description" class="form-control"></textarea>
                            <span asp-validation-for="Request.Description" class="text-danger"></span>
                        </div>

                        <div class="">
                            <label class="form-label">Request Images</label>
                            <input type="file" name="files" class="form-control" multiple />
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Request.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Request" asp-action="Index" class="btn btn-outline-primary border  form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="col-2">
                    @if (Model.Request.RequestImages != null) {
                        foreach(var image in Model.Request.RequestImages) {
                            <div class="border p-1 m-2 text-center">
                                <img src="@image.ImageUrl" width="100%"
                                     style="border-radius:5px; border:1px solid #bbb9b9" />
                                     <a asp-action="DeleteImage" class="btn btn-danger" asp-route-imageId="@image.Id">
                                    <i class="bi bi-trash-fill"></i> Delete
                                     </a>
                            </div>
                        }
                    }
                </div>
            </div>
           
        </form>
    </div>
</div>




@section Scripts{
    <script>
        $(document).ready(function () {
            $('textarea').summernote();
        });
    </script>
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}