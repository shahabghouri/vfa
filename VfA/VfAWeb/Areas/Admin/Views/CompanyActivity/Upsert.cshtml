@model CompanyActivityVM
@{
    ViewData["Title"] = Model.CompanyActivity.Id != 0 ? "Update Activity" : "Create Activity";
}
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.CompanyActivity.Id != 0 ? "Update" : "Create") CompanyActivity</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="CompanyActivity.Id" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@
                        <div class="form-floating mb-2">
                            <input asp-for="CompanyActivity.Name" class="form-control" />
                            <label asp-for="CompanyActivity.Name" class="form-label"></label>
                            <span asp-validation-for="CompanyActivity.Name" class="text-danger"></span>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.CompanyActivity.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="CompanyActivity" asp-action="Index" class="btn btn-outline-primary border  form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('textarea').summernote();
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}